<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    android:id="@+id/scrollview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbars="none"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linear_layout_main"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                        <ImageView
                            android:layout_margin="5dp"
                            android:id="@+id/img_view"
                            android:background="@color/black"
                            android:layout_width="200dp"
                            android:scaleType="centerCrop"
                            android:layout_height="200dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_marginLeft="10dp"
                                android:layout_margin="5dp"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <com.dalaleen.custome_front.LatoRegular
                                    android:id="@+id/tv_name"
                                    android:padding="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Royal Avenue"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:src="@drawable/ic_location_on_red_24dp"/>

                                    <com.dalaleen.custome_front.LatoRegular
                                        android:id="@+id/tv_place"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="2dp"
                                        android:text="Rajarhat,New Town"
                                        android:textColor="#9A9A9A"
                                        android:padding="5dp"
                                        android:textSize="16sp"/>

                                </LinearLayout>



                                <com.dalaleen.custome_front.LatoBoldTV
                                    android:id="@+id/tv_iqu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="IQU 25,000"
                                    android:padding="5dp"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"/>


                            </LinearLayout>

                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                >

                                <ImageView
                                    android:padding="5dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:src="@drawable/ic_more_horiz_black_24px"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </RelativeLayout>


                        </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relative_delete"
                android:background="#EDEDED"
                android:layout_width="200dp"
                android:layout_height="match_parent">


                <ImageView
                    android:src="@drawable/ic_delete_red_24dp"
                    android:id="@+id/image_cross"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.dalaleen.custome_front.LatoRegular
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/image_cross"
                    android:text="Delete"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
    </LinearLayout>

</HorizontalScrollView>

