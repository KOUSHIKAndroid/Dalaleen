<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="400dp">

    <ImageView
        android:id="@+id/img_view_background"
        android:background="#886062"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_view_favourite"
            android:padding="10dp"
            android:src="@drawable/ic_favorite_border_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <com.dalaleen.custome_front.LatoRegular
            android:id="@+id/tv_status"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:background="#E8532B"
            android:text="Sale"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_width="70dp"
            android:layout_height="40dp" />

    </RelativeLayout>

    <LinearLayout
        android:background="#33000000"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.dalaleen.custome_front.LatoBoldTV
                    android:padding="5dp"
                    android:id="@+id/tv_name"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:text="The Crest-Harse Macro"
                    android:layout_height="wrap_content" />

                <com.dalaleen.custome_front.LatoRegular
                    android:id="@+id/tv_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:text="J.N.Marg"
                    android:textColor="@color/white" />


            </LinearLayout>


            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.dalaleen.custome_front.LatoBoldTV
                    android:id="@+id/tv_iqu"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IQU 25,0000"
                    android:textColor="@color/white"/>

                <com.dalaleen.custome_front.LatoRegular
                    android:id="@+id/tv_price"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textColor="@color/white"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>



</RelativeLayout>