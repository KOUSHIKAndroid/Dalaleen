<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    tools:context="com.dalaleen.fragments.ExplorerFragment"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_layout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:paddingTop="0dp"
                android:paddingBottom="20dp"
                android:gravity="center_vertical"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/IMG_Up_Arrow"
                    android:layout_width="80dp"
                    android:paddingBottom="15dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="0dp"
                    android:src="@drawable/ic_keyboard_arrow_up_white"
                    android:layout_height="40dp" />

                <RelativeLayout
                    android:id="@+id/RL_MAIN"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_edittext">

                    <com.dalaleen.custome_front.LatoRegular
                        android:id="@+id/e_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="#68B3F6"
                        android:hint="@string/enter_location_search"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:textColor="#B9DDFB"
                        android:textColorHint="#B9DDFB" />

                    <ImageView
                        android:id="@+id/e_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="5dp"
                        android:src="@drawable/ic_cancel_sky_blue_24dp" />


                    <ImageView
                        android:id="@+id/ed_search"
                        android:layout_width="wrap_content"
                        android:layout_height="35sp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:padding="7dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_location_on_sky_24dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/RL_Edit_Main"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_edittext">

                    <EditText
                        android:id="@+id/edit_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="#68B3F6"
                        android:hint="@string/enter_location_search"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:textColor="#B9DDFB"
                        android:textColorHint="#B9DDFB" />

                    <ImageView
                        android:id="@+id/img_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="5dp"
                        android:src="@drawable/ic_cancel_sky_blue_24dp" />


                    <ImageView
                        android:id="@+id/img_search"
                        android:layout_width="wrap_content"
                        android:layout_height="35sp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:padding="7dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_location_on_sky_24dp" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/LL_TOP_1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/rounded_edittext"
                        android:layout_height="40dp">

                        <com.dalaleen.custome_front.LatoRegular
                            android:id="@+id/TXT_residential"
                            android:layout_width="match_parent"
                            android:hint="@string/catagory"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:text="Residential"
                            android:textColor="@color/white"
                            android:textColorHint="@color/tw__light_gray"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:rotation="180"
                            android:src="@drawable/ic_keyboard_arrow_up_white"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/rounded_edittext"
                        android:layout_height="40dp">
                        <com.dalaleen.custome_front.LatoRegular
                            android:id="@+id/TXT_RentType"
                            android:layout_width="match_parent"
                            android:hint="@string/catagory"
                            android:gravity="center"
                            android:text="All"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/tw__light_gray"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:rotation="180"
                            android:src="@drawable/ic_keyboard_arrow_up_white"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LL_TOP_1_1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/rounded_edittext"
                        android:layout_height="40dp">

                        <com.dalaleen.custome_front.LatoRegular
                            android:id="@+id/TXT_PropertyType"
                            android:layout_width="match_parent"
                            android:hint="@string/catagory"
                            android:gravity="center"
                            android:text="All"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/tw__light_gray"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:rotation="180"
                            android:src="@drawable/ic_keyboard_arrow_up_white"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/rounded_edittext"
                        android:layout_height="40dp">
                        <com.dalaleen.custome_front.LatoRegular
                            android:id="@+id/TXT_Provinence"
                            android:layout_width="match_parent"
                            android:hint="@string/catagory"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:text="Neighbourhood"
                            android:textColor="@color/white"
                            android:textColorHint="@color/tw__light_gray"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:rotation="180"
                            android:src="@drawable/ic_keyboard_arrow_up_white"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LL_TOP_2"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/rounded_edittext"
                        android:layout_height="40dp">
                        <com.dalaleen.custome_front.LatoRegular
                            android:id="@+id/TXT_Neighbourhood"
                            android:layout_width="match_parent"
                            android:hint="@string/catagory"
                            android:gravity="center"
                            android:text="All"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/tw__light_gray"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:rotation="180"
                            android:src="@drawable/ic_keyboard_arrow_up_white"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/rounded_edittext_gary"
                        android:layout_height="40dp">
                       <com.dalaleen.custome_front.LatoBoldTV
                           android:layout_width="match_parent"
                           android:text="@string/search"
                           android:gravity="center"
                           android:layout_height="match_parent" />
                    </RelativeLayout>

                </LinearLayout>






            </LinearLayout>

            <com.dalaleen.custome_front.LatoBoldTV
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="@string/Hot_property"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/REC_HOTLIST"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


            <com.dalaleen.custome_front.LatoBoldTV
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="@string/featureproperty"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/REC_FEATURELIST"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_network_check_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_network_network_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_wifi_off" />

            <com.dalaleen.custome_front.LatoRegular
                android:id="@+id/network_check_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="no network connection"
                android:textColor="#98333333"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>