<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dalaleen.Activities.SignupLogin"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#40000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="70dp"
            >
            <com.dalaleen.custome_front.LatoBoldTV
                android:textStyle="bold"
                android:textSize="50sp"
                android:textColor="@color/white"
                android:text="DALALEEN"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.dalaleen.custome_front.LatoRegular
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="NatusErrorSitVolupTatemoppAntium"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/linear_owner_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.dalaleen.custome_front.LatoRegular
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:text="@string/owner"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:id="@+id/splitLine_owner_tab"
                        android:layout_width="match_parent"
                        android:layout_height= "2dp"
                        android:background="#5493F2" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_agent_tab"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.dalaleen.custome_front.LatoRegular
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:text="@string/agent"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/splitLine_agent_tab"
                        android:layout_width="match_parent"
                        android:layout_height= "2dp"
                        android:background="#00000000" />

                </LinearLayout>

            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:layout_marginTop="20dp"
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
