<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >


    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/img_view"
        android:background="@color/black"
        android:layout_width="100dp"
        android:scaleType="centerCrop"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.dalaleen.custome_front.LatoBoldTV
                android:id="@+id/tv_name"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Royal Avenue"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_location_on_red_24dp"/>

                <com.dalaleen.custome_front.LatoRegular
                    android:id="@+id/tv_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="Rajarhat,New Town"
                    android:textColor="#9A9A9A"
                    android:padding="5dp"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.dalaleen.custome_front.LatoBoldTV
                    android:id="@+id/tv_bhk_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.3"
                    android:textSize="18sp"/>

                <com.dalaleen.custome_front.LatoRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="Bhk"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.dalaleen.custome_front.LatoBoldTV
                    android:id="@+id/tv_bhk_sqr_ft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1145"
                    android:textSize="16sp"/>

                <com.dalaleen.custome_front.LatoRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="sq.ft"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            >

            <com.dalaleen.custome_front.LatoRegular
                android:id="@+id/tv_view"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/log_in_round_corner"
                android:gravity="center"
                android:padding="5dp"
                android:text="view"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.dalaleen.custome_front.LatoRegular
                android:layout_above="@id/tv_view"
                android:text="price On Request"
                android:gravity="center"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>